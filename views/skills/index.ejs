<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Dev Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>Skills</h1>
    <h3>Time: <%= time %>
    </h3>
    <a href="/skills/new">make new skill</a>
    <ul>
        <% skills.forEach(function(s) { %>
            <li>
                <form class="delete-form" method="POST" action="/skills/<%= s.id %>?_method=DELETE">
                    <button type="submit">X</button>
                </form>
                <a href="/skills/<%= s.id %> ">
                    <%= s.skill %>
                </a>
                -
                <%= s.done ? 'done' : 'not done' %>
            </li>
            <% }) %>
    </ul>
</body>

</html>